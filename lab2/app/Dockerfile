FROM openjdk:8
ARG POSTGRES_DB
ARG POSTGRES_USER
ARG POSTGRES_PASSWORD
COPY ./*.jar /usr/src/crud_app/
WORKDIR /usr/src/crud_app/
CMD java -jar -DPOSTGRES_DB=${POSTGRES_DB} -DPOSTGRES_USER=${POSTGRES_USER} -DPOSTGRES_PASSWORD=${POSTGRES_PASSWORD} /usr/src/crud_app/spring-crud-app-0.0.1-SNAPSHOT.jar
 
EXPOSE 8888
